<div class="container">
  <h2 class="tittle"> Join and Ask! </h2>

  <div class="mt">
    <%= form_with model: @user do |form| %>
      <p><%= form.label :name, "Your name" %></p>
      <p><%= form.text_field :name, class: "form-text-field" %></p>

      <p class="mt"><%= form.label :nickname, "Name on the site" %></p>
      <p><%= form.text_field :nickname, class: "form-text-field" %></p>

      <p class="mt"><%= form.label :email %></p>
      <p><%= form.text_field :email, class: "form-text-field" %></p>

      <p class="mt-lg"><%= form.submit "To register", class: "button button-main" %></p>
    <% end %>

  </div>
</div>